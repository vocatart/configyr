<!-- Project Manager for Configyr -->

<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:configyr.ViewModels"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
             x:Class="configyr.Views.ProjectManager">

  <Panel Margin="40">
    <!-- buttons --> 
    <Button Content="Create New Project" Command="{Binding CreateProject}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    <Button Content="Open Project" Command="{Binding OpenProject}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
  </Panel>
</UserControl>