<!-- Project Manager for Configyr -->

<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:configyr.ViewModels"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
             x:Class="configyr.Views.ProjectManager">

  <StackPanel>
    <TextBlock Text="configyr" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50" FontWeight="SemiLight" Margin="50"/>
    <Button Content="Create New Project" Command="{Binding CreateProject}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15"/>
    <Button Content="Open Project" Command="{Binding OpenProject}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15"/>
  </StackPanel>
</UserControl>